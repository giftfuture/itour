<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itour.dao.CustomersDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.itour.entity.Customers" >
	<result column="id" property="id"/>
	<result column="customer_id" property="customerId"/>
	<result column="create_time" property="createTime"/>
	<result column="status" property="status"/>
	<result column="update_time" property="updateTime"/>
	<result column="address" property="address"/>
	<result column="email" property="email"/>
	<result column="scope" property="scope"/>
	<result column="city" property="city"/>
	<result column="telephone" property="telephone"/>
	<result column="mobile" property="mobile"/>
	<result column="customer_name" property="customerName"/>
	<result column="nick_name" property="nickName"/>
	<result column="district" property="district"/>
	<result column="introduction" property="introduction"/>
</resultMap>
       
<!-- customers table all fields -->
<sql id="Base_Column_List" >
	 id, customer_id, create_time, status, update_time, address, email, scope, city, telephone, mobile, customer_name, nick_name, district, introduction
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null and id != ''" >
	    and id =  #{id}
	</if>
	<if test="customerId != null and customerId != ''" >
	    and customer_id =  #{customerId}
	</if>
	<if test="createTime != null and createTime != ''" >
	    and create_time =  #{createTime}
	</if>
	<if test="status != null and status != ''" >
	    and status =  #{status}
	</if>
	<if test="updateTime != null and updateTime != ''" >
	    and update_time =  #{updateTime}
	</if>
	<if test="address != null and address != ''" >
	    and address =  #{address}
	</if>
	<if test="email != null and email != ''" >
	    and email =  #{email}
	</if>
	<if test="scope != null and scope != ''" >
	    and scope =  #{scope}
	</if>
	<if test="city != null and city != ''" >
	    and city =  #{city}
	</if>
	<if test="telephone != null and telephone != ''" >
	    and telephone =  #{telephone}
	</if>
	<if test="mobile != null and mobile != ''" >
	    and mobile =  #{mobile}
	</if>
	<if test="customerName != null and customerName != ''" >
	    and customer_name =  #{customerName}
	</if>
	<if test="nickName != null and nickName != ''" >
	    and nick_name =  #{nickName}
	</if>
	<if test="district != null and district != ''" >
	    and district =  #{district}
	</if>
	<if test="introduction != null and introduction != ''" >
	    and introduction =  #{introduction}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="add" parameterType="com.itour.entity.Customers" >
<!-- <selectKey resultType="java.lang.String" order="AFTER" keyProperty="id">
	SELECT LAST_INSERT_ID()
  </selectKey> -->
  insert into customers(id,customer_id,create_time,status,update_time,address,email,scope,city,telephone,mobile,customer_name,nick_name,district,introduction)
 values(#{id},#{customerId},now(),#{status},now(),#{address},#{email},#{scope},#{city},#{telephone},#{mobile},#{customerName},#{nickName},#{district},#{introduction})
</insert>

 <!-- 修改记录，只修改只不为空的字段 -->
<update id="update" parameterType="com.itour.entity.Customers" >
	update customers set update_time=now(),
	<trim  suffixOverrides="," >
	<if test="customerId != null  ">
		customer_id=#{customerId},
	</if>
	<if test="status != null  ">
		status=#{status},
	</if>
	<if test="address != null and address != '' ">
		address=#{address},
	</if>
	<if test="email != null and email != '' ">
		email=#{email},
	</if>
	<if test="scope != null  ">
		scope=#{scope},
	</if>
	<if test="city != null and city != '' ">
		city=#{city},
	</if>
	<if test="telephone != null telephone != '' ">
		telephone=#{telephone},
	</if>
	<if test="mobile != null and mobile != '' ">
		mobile=#{mobile},
	</if>
	<if test="customerName != null and customerName != '' ">
		customer_name=#{customerName},
	</if>
	<if test="nickName != null and nickName !='' ">
		nick_name=#{nickName},
	</if>
	<if test="district != null and district !='' ">
		district=#{district},
	</if>
	<if test="introduction != null and introduction != '' ">
		introduction=#{introduction},
	</if>
	</trim> where id=#{id}
</update>

<!-- 删除记录 -->
<delete id="delete" parameterType="java.lang.String">
	delete  from customers where id = #{id}
</delete>
 
<!-- 根据id查询 客户信息 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="java.lang.String">
	select <include refid="Base_Column_List" /> 
	 from customers where id = #{id}
</select>

<!-- 客户信息 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="com.itour.base.page.BasePage">
	select count(1) from customers 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询客户信息列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="com.itour.base.page.BasePage">
	select 
	<include refid="Base_Column_List"/>
	from customers 
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
    <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>
  	
</mapper>   
