<!-- 删除记录 -->
<delete id="delete" parameterType="java.lang.String">
	delete from travel_item where id = #{id}
</delete>
 <!-- 逻辑删除 -->
<update id="logicdelete" parameterType="java.lang.String">
	update travel_item set is_valid=0 where id = #{id}
</update>
<!-- 根据id查询 旅行项目 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="java.lang.String">
select <include refid="Base_Column_List" /> 
	 from travel_item where id = #{id}
</select>
<!-- resultMap="allscopes"  -->
<select id="allScopes"  resultType="hashmap">
 select scope_alias scopeAlias,scope from travel_item group by scope
</select>	

<select id="allItems"  resultType="hashmap">
 select alias ,item from travel_item 
</select>	
	
<select id="searchTravelItem" resultMap="BaseResultMap" parameterType="java.util.Map">
 	select ti.*
   	 from travel_item ti left join travel_style ts on ti.travel_style=ts.id 
 	 where 1=1
 	 <trim  suffixOverrides="," >
 	 <if test="alias != null and alias != ''">
	    and ts.alias like CONCAT('%', #{alias}, '%')
	</if>
	<if test="scope != null and scope != ''" >
	    and ti.scope =  #{scope}
	</if>
	<if test="rcdDays1 != null and rcdDays2 != null">
		and ti.rcd_days between #{rcdDays1} and #{rcdDays2}
	</if>
	<if test="rcdDays != null ">
		and ti.rcd_days <![CDATA[>=]]> #{rcdDays}
	</if>
	</trim>
</select>
<!-- 旅行项目 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="com.itour.base.page.BasePage">
	select count(1) from travel_item 
	<include refid="Example_Where_Clause"/>
</select>
<select id="getByAlias" resultMap="BaseResultMap" parameterType="java.lang.String">
 	select <include refid="Base_Column_List"/> from travel_item where alias=#{alias}
</select>
<select id="queryByScope" resultMap="BaseResultMap" parameterType="java.lang.String">
 	select <include refid="Base_Column_List"/> from travel_item where scope=#{scope}
</select>
<select id="queryByScopeAlias" resultMap="BaseResultMap" parameterType="java.lang.String">
 	select <include refid="Base_Column_List"/> from travel_item where scope_alias=#{scopeAlias}
</select>
<select id="queryByIds" parameterType="java.util.List" resultMap="BaseResultMap">
select <include refid="Base_Column_List"/>
from travel_item where travel_item.id in 
<foreach collection="list" item="ids" index="index" open="(" separator="," close=")">  
      #{ids}  
</foreach>
</select>  
<select id="queryByAlias" parameterType="java.util.List" resultMap="BaseResultMap">
select <include refid="Base_Column_List"/>
from travel_item where travel_item.alias in 
<foreach collection="list" item="alias" index="index" open="(" separator="," close=")">  
      #{alias}  
</foreach>
</select>  
<!-- 获取该旅行方式下的施行项目 -->
<select id="queryByStyle" parameterType="java.lang.String" resultMap="BaseResultMap">
select <include refid="Base_Column_List"/>
from travel_item inner join travel_style on travel_item.travel_style = travel_style.id where travel_item.travel_style=#{travelStyle}
</select>  	
<!-- 查询旅行项目列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="com.itour.base.page.BasePage">
	select 
	<include refid="Base_Column_List"/>
	from travel_item 
