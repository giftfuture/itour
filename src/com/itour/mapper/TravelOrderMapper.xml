<!-- travel_order table all fields -->
<sql id="Base_Column_List" >
	 id, create_time, update_time, order_name, order_no, order_status, receiver, receiver_mobile, remark, customer_id, expected_depart, expected_back, total_staff, is_payed, pay_type, pay_platform, bank, pay_account, pay_time, pay_terminal, budget,is_valid
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where is_valid=1
<trim  suffixOverrides="," >
	<if test="id != null and id != ''" >
	    and id like CONCAT('%', #{id}, '%')
	</if>
	<if test="createTime != null" >
	   and DATE_FORMAT(create_time,'%Y-%m-%d') = DATE_FORMAT(#{createTime},'%Y-%m-%d') 
	</if>
	<if test="updateTime != null" >
	   and DATE_FORMAT(update_time,'%Y-%m-%d') = DATE_FORMAT(#{updateTime},'%Y-%m-%d') 
	</if>
	<if test="orderName != null and orderName != ''" >
	    and order_name like CONCAT('%', #{orderName}, '%')
	</if>
	<if test="orderNo != null and orderNo != ''" >
	    and order_no like CONCAT('%', #{orderNo}, '%')
	</if>
	<if test="orderStatus != null and orderStatus != ''" >
	    and order_status =  #{orderStatus}
	</if>
	<if test="receiver != null and receiver != ''" >
	    and receiver like CONCAT('%', #{receiver}, '%')
	</if>
	<if test="receiverMobile != null and receiverMobile != ''" >
	    and receiver_mobile =  #{receiverMobile}
	</if>
	<if test="remark != null and remark != ''" >
	    and remark like CONCAT('%', #{remark}, '%')
	</if>
	<if test="customerId != null and customerId != ''" >
	    and customer_id like CONCAT('%', #{customerId}, '%')
	</if>
	<if test="expectedDepart != null" >
	   and DATE_FORMAT(expected_depart,'%Y-%m-%d') = DATE_FORMAT(#{expectedDepart},'%Y-%m-%d') 
	</if>
	<if test="expectedBack != null" >
	   and DATE_FORMAT(expected_back,'%Y-%m-%d') = DATE_FORMAT(#{expectedBack},'%Y-%m-%d') 
	</if>
	<if test="totalStaff != null" >
	    and total_staff =  #{totalStaff}
	</if>
	<if test="isPayed != null" >
	    and is_payed =  #{isPayed}
	</if>
	<if test="payType != null and payType != ''" >
	    and pay_type =  #{payType}
	</if>
	<if test="payPlatform != null and payPlatform != ''" >
	    and pay_platform like CONCAT('%', #{payPlatform}, '%')
	</if>
	<if test="bank != null and bank != ''" >
	    and bank like CONCAT('%', #{bank}, '%')
	</if>
	<if test="payAccount != null and payAccount != ''" >
	    and pay_account like CONCAT('%', #{payAccount}, '%')
	</if>
	<if test="payTime != null" >
	   and DATE_FORMAT(pay_time,'%Y-%m-%d') = DATE_FORMAT(#{payTime},'%Y-%m-%d') 
	</if>
	<if test="payTerminal != null and payTerminal != ''" >
	    and pay_terminal like CONCAT('%', #{payTerminal}, '%')
	</if>
	<if test="budget != null" >
	    and budget =  #{budget}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="add" parameterType="com.itour.entity.TravelOrder" >
<!-- <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
	SELECT LAST_INSERT_ID()
  </selectKey> -->
  insert into travel_order(id,create_time,update_time,order_name,order_no,order_status,receiver,receiver_mobile,remark,customer_id,expected_depart,expected_back,total_staff,is_payed,pay_type,pay_platform,bank,pay_account,pay_time,pay_terminal,budget,is_valid)
 values(#{id},now(),now(),#{orderName},#{orderNo},#{orderStatus},#{receiver},#{receiverMobile},#{remark},#{customerId},#{expectedDepart},#{expectedBack},#{totalStaff},#{isPayed},#{payType},#{payPlatform},#{bank},#{payAccount},#{payTime},#{payTerminal},#{budget},1)
</insert>

