<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itour.dao.QuotationDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.itour.entity.Quotation" >
	<result column="id" property="id"/>
	<result column="name" property="name"/>
	<result column="order_id" property="orderId"/>
	<result column="quotation" property="quotation"/>
	<result column="create_time" property="createTime"/>
	<result column="update_time" property="updateTime"/>
	<result column="remark" property="remark"/>
	<result column="type" property="type"/>
	<result column="total_price" property="totalPrice"/>
	<result column="formula" property="formula"/>
</resultMap>
       
<!-- quotation table all fields -->
<sql id="Base_Column_List" >
	 id, name, order_id, quotation, create_time, update_time, remark, type, total_price, formula
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null and id != ''" >
	    and id =  #{id}
	</if>
	<if test="name != null and name != ''" >
	    and name =  #{name}
	</if>
	<if test="orderId != null and orderId != ''" >
	    and order_id =  #{orderId}
	</if>
	<if test="quotation != null and quotation != ''" >
	    and quotation =  #{quotation}
	</if>
	<if test="createTime != null and createTime != ''" >
	    and create_time =  #{createTime}
	</if>
	<if test="updateTime != null and updateTime != ''" >
	    and update_time =  #{updateTime}
	</if>
	<if test="remark != null and remark != ''" >
	    and remark =  #{remark}
	</if>
	<if test="type != null and type != ''" >
	    and type =  #{type}
	</if>
	<if test="totalPrice != null and totalPrice != ''" >
	    and total_price =  #{totalPrice}
	</if>
	<if test="formula != null and formula != ''" >
	    and formula =  #{formula}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="add" parameterType="com.itour.entity.Quotation" >
<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
	SELECT LAST_INSERT_ID()
  </selectKey>
  insert into quotation(id,name,order_id,quotation,create_time,update_time,remark,type,total_price,formula)
 values(#{id},#{name},#{orderId},#{quotation},now(),now(),#{remark},#{type},#{totalPrice},#{formula})
</insert>

<!-- 根据id，修改记录-->  
 <update id="update" parameterType="java.util.Map" >
  update quotation set name=#{name},order_id=#{orderId},quotation=#{quotation},create_time=now(),update_time=now(),remark=#{remark},type=#{type},total_price=#{totalPrice},formula=#{formula} where id=#{id}
 </update>
 
 <!-- 修改记录，只修改只不为空的字段 -->
<update id="updateBySelective" parameterType="com.itour.entity.Quotation" >
	update quotation set 
	<trim  suffixOverrides="," >
	<if test="name != null  ">
		name=#{name},
	</if>
	<if test="orderId != null  ">
		order_id=#{orderId},
	</if>
	<if test="quotation != null  ">
		quotation=#{quotation},
	</if>
	<if test="createTime != null  ">
		create_time=#{createTime},
	</if>
	<if test="updateTime != null  ">
		update_time=#{updateTime},
	</if>
	<if test="remark != null  ">
		remark=#{remark},
	</if>
	<if test="type != null  ">
		type=#{type},
	</if>
	<if test="totalPrice != null  ">
		total_price=#{totalPrice},
	</if>
	<if test="formula != null  ">
		formula=#{formula},
	</if>
	</trim> where id=#{id}
</update>

<!-- 删除记录 -->
<delete id="delete" parameterType="java.util.Map">
	delete 	 from quotation where id = #{id}
</delete>
 
<!-- 根据id查询 报价单 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="java.lang.String">
	select <include refid="Base_Column_List" /> 
	 from quotation where id = #{id}
</select>

<!-- 报价单 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="java.util.Map">
	select count(1) from quotation 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询报价单列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="java.util.Map">
	select 
	<include refid="Base_Column_List"/>
	from quotation 
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
    <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>
  	
</mapper>   
