<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itour.dao.FeedbackDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.itour.entity.Feedback" >
	<result column="feedback_id" property="feedbackId"/>
	<result column="create_time" property="createTime"/>
	<result column="status" property="status"/>
	<result column="update_time" property="updateTime"/>
	<result column="title" property="title"/>
	<result column="content" property="content"/>
	<result column="customer_id" property="customerId"/>
	<result column="result" property="result"/>
</resultMap>
       
<!-- feedback table all fields -->
<sql id="Base_Column_List" >
	 feedback_id, create_time, status, update_time, title, content, customer_id, result
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="feedbackId != null and feedbackId != ''" >
	    and feedback_id =  #{feedbackId}
	</if>
	<if test="createTime != null and createTime != ''" >
	    and create_time =  #{createTime}
	</if>
	<if test="status != null and status != ''" >
	    and status =  #{status}
	</if>
	<if test="updateTime != null and updateTime != ''" >
	    and update_time =  #{updateTime}
	</if>
	<if test="title != null and title != ''" >
	    and title =  #{title}
	</if>
	<if test="content != null and content != ''" >
	    and content =  #{content}
	</if>
	<if test="customerId != null and customerId != ''" >
	    and customer_id =  #{customerId}
	</if>
	<if test="result != null and result != ''" >
	    and result =  #{result}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="add" parameterType="com.itour.entity.Feedback" >
<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
	SELECT LAST_INSERT_ID()
  </selectKey>
  insert into feedback(feedback_id,create_time,status,update_time,title,content,customer_id,result)
 values(#{feedbackId},now(),#{status},now(),#{title},#{content},#{customerId},#{result})
</insert>

<!-- 根据id，修改记录-->  
 <update id="update" parameterType="java.util.Map" >
  update feedback set create_time=now(),status=#{status},update_time=now(),title=#{title},content=#{content},customer_id=#{customerId},result=#{result} where feedback_id=#{feedbackId}
 </update>
 
 <!-- 修改记录，只修改只不为空的字段 -->
<update id="updateBySelective" parameterType="com.itour.entity.Feedback" >
	update feedback set 
	<trim  suffixOverrides="," >
	<if test="createTime != null  ">
		create_time=#{createTime},
	</if>
	<if test="status != null  ">
		status=#{status},
	</if>
	<if test="updateTime != null  ">
		update_time=#{updateTime},
	</if>
	<if test="title != null  ">
		title=#{title},
	</if>
	<if test="content != null  ">
		content=#{content},
	</if>
	<if test="customerId != null  ">
		customer_id=#{customerId},
	</if>
	<if test="result != null  ">
		result=#{result},
	</if>
	</trim> where feedback_id=#{feedbackId}
</update>

<!-- 删除记录 -->
<delete id="delete" parameterType="java.util.Map">
	delete 	 from feedback where feedback_id = #{feedbackId}
</delete>
 
<!-- 根据id查询 客户反馈 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="java.lang.String">
	select <include refid="Base_Column_List" /> 
	 from feedback where feedback_id = #{feedbackId}
</select>

<!-- 客户反馈 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="java.util.Map">
	select count(1) from feedback 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询客户反馈列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="java.util.Map">
	select 
	<include refid="Base_Column_List"/>
	from feedback 
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
    <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>
  	
</mapper>   
